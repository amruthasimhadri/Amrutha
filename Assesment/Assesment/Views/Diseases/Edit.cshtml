@model Assesment.Models.Disease

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Disease</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DiseasesId" class="control-label"></label>
                <input asp-for="DiseasesId" class="form-control" />
                <span asp-validation-for="DiseasesId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="DiseasesName" />
            <div class="form-group">
                <label asp-for="SuitableDoctor" class="control-label"></label>
                <select asp-for="SuitableDoctor" class="form-control" asp-items="ViewBag.SuitableDoctor"></select>
                <span asp-validation-for="SuitableDoctor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
